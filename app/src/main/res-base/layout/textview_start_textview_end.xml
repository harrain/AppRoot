<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/listitem_touch_bg"
    android:id="@+id/textonly_itemdelegate"
    android:layout_width="match_parent"
    android:layout_height="@dimen/setting_item_height">

    <TextView
        android:textColor="@color/blackPrimary"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/setting_item_paddingstart"
        android:id="@+id/item_tv_title"
        android:textSize="@dimen/setting_item_textsize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_tv_des"
        android:textSize="14sp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/setting_item_paddingend"
        android:textColor="@color/light_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>