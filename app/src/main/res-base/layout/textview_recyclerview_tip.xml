<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wechat_vacant_bg">

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_tip"
        android:drawableLeft="@drawable/state_fail_resend"
        android:drawablePadding="@dimen/netstatus_item_drawablepadding"
        android:text="@string/net_cannotuse"
        android:textSize="@dimen/netstatus_item_textsize"
        android:gravity="center_vertical"
        android:background="@color/netstatus_item_bg"
        android:paddingStart="@dimen/netstatus_item_marginstart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/netstatus_item_height" />

    <android.support.v7.widget.RecyclerView
        android:background="@color/wechat_vacant_bg"
        android:id="@+id/rv_tip"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>