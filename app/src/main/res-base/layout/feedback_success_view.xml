<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.nettech.statement.ui.activity.FeedbackActivity"
    >


    <ImageView
        android:layout_marginTop="50dp"
        android:src="@drawable/checked"
        android:scaleType="centerCrop"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <TextView
        android:layout_marginTop="50dp"
        android:textColor="@color/blackPrimaryDark"
        android:text="反馈成功"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginStart="@dimen/setting_item_paddingstart"
        android:layout_marginEnd="@dimen/setting_item_paddingend"
        android:text="感谢你对评价的关注与支持，我们会认真处理你的反馈，尽快修复和完善相关功能。"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:textAlignment="center"
        android:textColor="@color/light_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="close"
        android:text="关闭"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_solid_button_green_bg"
        android:layout_marginStart="@dimen/setting_item_paddingstart"
        android:layout_marginEnd="@dimen/setting_item_paddingend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>