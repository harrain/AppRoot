<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    app:navigationIcon="@null"
    android:background="#393a3f">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/map_toolbar_back_fl"
            android:clickable="true"
            android:focusable="true"
            android:background="#393a3f"
            android:layout_width="35dp"
            android:layout_height="match_parent">

            <ImageView

                android:id="@+id/map_toolbar_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/ic_back" />
        </FrameLayout>

        <View
            android:id="@+id/map_back_fl_decor"
            android:background="#303135"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_toRightOf="@id/map_toolbar_back_fl"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>


        <ImageView
            android:id="@+id/map_toolbar_more"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#393a3f"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/map_toolbar_left_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/map_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="#fff"
            android:textSize="18sp" />



    </RelativeLayout>


</android.support.v7.widget.Toolbar>